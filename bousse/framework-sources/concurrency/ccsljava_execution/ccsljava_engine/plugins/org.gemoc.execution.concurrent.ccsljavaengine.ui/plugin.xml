           type="org.gemoc.execution.concurrent.ccsljavaengine.ui.launcher">
	    </launchConfigurationTabGroup>
	</extension>
    <extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="org.gemoc.execution.concurrent.ccsljavaengine.ui.propertytesters.GemocConcurrentPropertyTester"
             id="org.gemoc.execution.concurrent.ccsljavaengine.ui.propertytesters.GemocConcurrentPropertyTester"
             namespace="org.gemoc.execution.concurrent.ccsljavaengine.ui.propertytesters"
             properties="isModel, isExecutableDomainSpecificModel"
             type="org.eclipse.core.runtime.IAdaptable">
       </propertyTester>
    </extension>
	<extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.gemoc.execution.concurrent.ccsljavaengine.ui.launcher.Launcher"
            description="Create a configuration to launch an Eclipse application in debug mode."
            icon="icons/IconeGemocModel-16.png"
            id="org.gemoc.execution.concurrent.ccsljavaengine.ui.GemocExecutableReflectiveModel"
            label="Gemoc eXecutable Model"
            modes="run, debug">
         <configurationType
               id="org.gemoc.execution.concurrent.ccsljavaengine.ui.launcher">
         </configurationType>
         <contextualLaunch>
            <enablement>
            	<with variable="selection">
		     		<count value="1"/>
	      			<iterate>
	       				<or>
	        				<test property="org.gemoc.execution.concurrent.ccsljavaengine.ui.propertytesters.isExecutableDomainSpecificModel"/>
	        				<test property="org.eclipse.debug.ui.matchesPattern"
	                        	value="*.xmi">
	                     	</test>
	        			</or>
	      			</iterate>
		     </with>
            </enablement>
            <contextLabel
                  label="Gemoc Concurrent eXecutable Model"
                  mode="run">
            </contextLabel>
            <contextLabel
                  label="Gemoc Concurrent eXecutable Model"
                  mode="debug">
            </contextLabel>
         </contextualLaunch>
      </shortcut>
   </extension>

